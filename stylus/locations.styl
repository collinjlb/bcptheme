.locations
  .locations-container
    display flex
    align-items stretch
    flex-direction column

    .state-select
      text-align center
      align-self flex-start
      padding 3rem 5vw
      color white
      width 100%
      background-color primaryColor
      h4
        font-size 2rem
        letter-spacing 0.4vw
        margin 0 0 1rem
      .state-title
        border 2px solid white
        background-color primaryColor
        color white
        padding 0.5rem 1rem
        border-radius 25px
        width 25rem
        +below(568px)
          width 100%
    #locationTab
      display none
      .nav-link
        width 100%
        border none
        border-radius 0
        background-color secondaryColor
        color white
        display flex
        align-items center
        justify-content center
        text-transform uppercase
        font-size 1.25rem
        letter-spacing 1px
        flex-wrap wrap
        +below('s')
          font-size 1rem
      .active
        background-color primaryColor
    .tab-content
      padding 3rem 5vw 0
      display flex
      align-items center
      justify-content center
      .tab-pane
        text-align center
        width 100%
        .state-title
          margin-bottom 3rem
          text-transform uppercase
          letter-spacing 2px
          color primaryColor
        .companies
          .company-section
            .company-holder
              .company-logo
                margin-bottom 2rem
                .company
                  height 5rem
                  background-size contain
                  background-repeat no-repeat
                  background-position center
                  margin-bottom 3rem
                  img
                    width 10rem
              .company-content
                display flex
                flex-direction column
                justify-content center
                margin 0 auto 5rem
                hr
                  border-top 2px solid secondaryColor
                  margin 0.5rem auto
                  width 70%
                  +below(1630px)
                    width 75%
                  +below(1450px)
                    width 85%
                  +below(1100px)
                    width 100%
                .location-holder
                  width 100%
                  display flex
                  flex-wrap wrap
                  justify-content center
                  align-items center
                  margin 1rem 0
                  +below('s')
                    flex-direction column-reverse
                  .map
                    width 50%
                    iframe
                      max-width 100%
                    +below('s')
                      width 100%
                  .content
                    width 25%
                    display flex
                    justify-content flex-start
                    align-items center
                    text-align left
                    +below(1350px)
                      width 30%
                    +below(1100px)
                      width 40%
                    +below('s')
                      text-align center
                      width 100%
                      padding 0 0 1rem
                    .info
                      max-width 100%
                      padding-left 4rem
                      p
                        margin-bottom 0.5rem
                      a
                        color secondaryColor
                        transition 0.3s
                        &:hover
                          color primaryColor
                      +below('s')
                        padding-left 0
                        margin auto
